{
  "name": "hytale-server-manager",
  "version": "1.0.0",
  "description": "Hytale Server Manager Desktop Application",
  "main": "dist/main/index.js",
  "scripts": {
    "dev": "npm run build:main && concurrently -k \"vite --config vite.config.ts\" \"node scripts/wait-and-launch.js\"",
    "dev:vite": "vite --config vite.config.ts",
    "dev:electron": "cross-env VITE_DEV_SERVER_URL=http://localhost:5173 electron .",
    "build": "tsc -p tsconfig.node.json && vite build --config vite.config.ts",
    "build:main": "tsc -p tsconfig.node.json",
    "package": "npm run build && electron-builder",
    "typecheck": "tsc --noEmit && tsc -p tsconfig.node.json --noEmit"
  },
  "dependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-router-dom": "^7.1.0",
    "zustand": "^5.0.0"
  },
  "devDependencies": {
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitejs/plugin-react": "^4.3.0",
    "autoprefixer": "^10.4.0",
    "chokidar": "^4.0.0",
    "concurrently": "^9.0.0",
    "cross-env": "^7.0.0",
    "electron": "^34.0.0",
    "electron-builder": "^25.0.0",
    "postcss": "^8.4.0",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.7.0",
    "vite": "^6.0.0"
  }
}
