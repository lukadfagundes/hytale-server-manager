{
  "name": "hytale-server-manager",
  "version": "0.0.1",
  "description": "Hytale Server Manager Desktop Application",
  "author": "lukadfagundes",
  "main": "dist/main/index.js",
  "scripts": {
    "extract-assets": "node scripts/extract-assets.js",
    "predev": "node scripts/extract-assets.js",
    "prebuild": "node scripts/extract-assets.js",
    "dev": "npm run build:main && concurrently -k \"vite --config vite.config.ts\" \"node scripts/wait-and-launch.js\"",
    "dev:vite": "vite --config vite.config.ts",
    "dev:electron": "cross-env VITE_DEV_SERVER_URL=http://localhost:5173 electron .",
    "build": "tsc -p tsconfig.node.json && vite build --config vite.config.ts",
    "build:main": "tsc -p tsconfig.node.json",
    "package": "npm run build && electron-builder",
    "typecheck": "tsc --noEmit && tsc -p tsconfig.node.json --noEmit",
    "test": "node node_modules/jest/bin/jest.js",
    "test:coverage": "node node_modules/jest/bin/jest.js --coverage"
  },
  "dependencies": {
    "chokidar": "^4.0.0",
    "electron-updater": "^6.3.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-router-dom": "^7.1.0",
    "zustand": "^5.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitejs/plugin-react": "^4.3.0",
    "autoprefixer": "^10.4.0",
    "concurrently": "^9.0.0",
    "cross-env": "^7.0.0",
    "electron": "^40.4.1",
    "electron-builder": "^26.7.0",
    "jest": "^29.7.0",
    "node-stream-zip": "^1.15.0",
    "postcss": "^8.4.0",
    "tailwindcss": "^3.4.0",
    "ts-jest": "^29.2.0",
    "typescript": "^5.7.0",
    "vite": "^6.0.0"
  }
}
